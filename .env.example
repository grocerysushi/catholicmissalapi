# Catholic Missal API Configuration

# API Configuration
API_V1_STR="/api/v1"
PROJECT_NAME="Catholic Missal API"
VERSION="1.0.0"

# Data Sources
USCCB_BASE_URL="https://bible.usccb.org"
VATICAN_BASE_URL="https://www.vatican.va"

# Rate Limiting
RATE_LIMIT_REQUESTS=60

# Cache Settings (seconds)
CACHE_EXPIRE_TIME=3600
READINGS_CACHE_TIME=86400
CALENDAR_CACHE_TIME=86400

# Database
DATABASE_URL="sqlite:///./catholic_missal.db"

# Logging
LOG_LEVEL="INFO"

# User Agent for respectful scraping
USER_AGENT="Catholic-Missal-API/1.0 (Educational/Religious Use)"

# Request timeout
REQUEST_TIMEOUT=30